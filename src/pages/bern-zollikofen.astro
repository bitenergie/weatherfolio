---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import PlotlyChart from "../components/PlotlyChart.astro";
---
<!doctype html>
<html>
<Header title="Bern / Zollikofen" />
<body>
    <div class="content">
    <Sidebar selectedItem="bern-zollikofen" />
    <nav class="main">
        <div class="container">
        <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
            ><img
                src="/assets/back.svg"
                loading="lazy"
                alt=""
                class="back-nav-img"
            />
            <div>Back</div></a
            >
        </div>
        <div class="content-container">
            <h1>Bern / Zollikofen</h1>
            <section class="items-container">
            <h3>Psychometric</h3>
            <PlotlyChart dataPath="/data/BER/psych_chart.json" chartId="BER-psych" />
            <h3>Temperature</h3>
            <PlotlyChart dataPath="/data/BER/hourly_chart.json" chartId="BER-hourly"/>
            <h3>Wind</h3>
            <PlotlyChart dataPath="/data/BER/wind_chart.json" chartId="BER-wind"/>
            </section>
        </div>
        </div>
    </nav>
    </div>

</body>
</html>
        