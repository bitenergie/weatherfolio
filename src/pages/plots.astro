---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import PlotlyChart from "../components/PlotlyChart.astro";

---

<!doctype html>
<html>
  <Header title="Personal plots | Sam Bernstein" />
  <body>
    <div class="content">
      <Sidebar selectedItem="plots" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img
                src="/assets/back.svg"
                loading="lazy"
                alt=""
                class="back-nav-img"
              />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Plots</h1>

            <section class="items-container">
              <h3>Psychometric</h3>

              <PlotlyChart dataPath="/data/chartData.json" chartId="sales-char1t" />

              <h3>Temperature</h3>
              <PlotlyChart dataPath="/data/anotherChart.json" chartId="lafsdjk"/>
   
              <h3>Wind</h3>
              <!-- Another chart -->
              <PlotlyChart dataPath="/data/WindChart.json" chartId="lafsdjk12"/>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
